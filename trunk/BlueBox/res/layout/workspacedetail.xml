<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:stretchColumns="1">
    
    <TableRow>
    	<TextView
    		android:text="Name"
    		android:padding="3dip" />
    	<EditText
    		android:id="@+id/wsd_edt_name"
    		android:padding="3dip" />
    	<Button
    		android:id="@+id/wsd_btn_name"
    		android:layout_width="50px"
    		android:text="Edit"
    		android:padding="3dip" />
    </TableRow>
    
    <TableRow>
    	<TextView
    		android:text="Network"
    		android:padding="3dip" />
    	<TextView
    		android:id="@+id/wsd_txt_network"
    		android:padding="3dip" />
    	<Button
    		android:id="@+id/wsd_btn_network"
    		android:layout_width="50px"
    		android:text="Edit"
    		android:padding="3dip" />
    </TableRow>
    
    <TableRow>
    	<TextView
    		android:text="Location"
    		android:padding="3dip" />
    	<TextView
    		android:id="@+id/wsd_txt_location"
    		android:padding="3dip" />
    	<Button
    		android:id="@+id/wsd_btn_location"
    		android:layout_width="50px"
    		android:text="Edit"
    		android:padding="3dip" />
    </TableRow>
</TableLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" >
		<Button android:id="@+id/wsd_btn_save"
			android:layout_width="100px"
			android:gravity="center_vertical|center_horizontal"
			android:layout_height="wrap_content"
			android:text="Save"
			/>
		<Button android:id="@+id/wsd_btn_canel"
			android:layout_width="100px"
			android:gravity="center_vertical|center_horizontal"
			android:layout_height="wrap_content"
			android:text="Cancel"
			/>
	</LinearLayout>
</LinearLayout>