<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical|center_horizontal"
    android:layout_centerInParent="true"
    >
    <TextView android:id="@+id/txtRemind"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="Write something to remind your password if you forget it. Anyway, be sure that others can not guest your password when they read this	hint"
    	/>
    <EditText android:id="@+id/edtRemind"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   		android:orientation="horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content" >
		<Button android:id="@+id/btnDone"
			android:layout_width="100px"
			android:gravity="center_vertical|center_horizontal"
			android:layout_height="wrap_content"
			android:text="Done"
			/>
		<Button android:id="@+id/btnBack"
			android:layout_width="100px"
			android:gravity="center_vertical|center_horizontal"
			android:layout_height="wrap_content"
			android:text="Back"
			/>
	</LinearLayout>
</LinearLayout>
</RelativeLayout>